<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add New Book" />
    
    <Label text="Name:" />
    <TextField fx:id="nameField" promptText="Enter book name" />

    <Label text="Category:" />
    <TextField fx:id="categoryField" promptText="Enter book category" />

    <Label text="Authors:" />
    <TextField fx:id="authorsField" promptText="Enter authors, comma separated" />

    <Label text="Cost:" />
    <TextField fx:id="costField" promptText="Enter book cost" />
    
    <Button onAction="#handleAddBook" text="Add Book" />
</VBox>