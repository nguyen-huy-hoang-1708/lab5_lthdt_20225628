<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    
    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add New CD" />
    
    <Label text="Title:" />
    <TextField fx:id="titleField" promptText="Enter CD title" />

    <Label text="Category:" />
    <TextField fx:id="categoryField" promptText="Enter CD category" />

    <Label text="Artist:" />
    <TextField fx:id="artistField" promptText="Enter artist name" />

    <Label text="Director:" />
    <TextField fx:id="directorField" promptText="Enter director name (optional)" />

    <Label text="Cost:" />
    <TextField fx:id="costField" promptText="Enter CD cost" />
    
    <Button onAction="#handleAddCD" text="Add CD" />
</VBox>